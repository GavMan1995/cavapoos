<!DOCTYPE html>
<html>
<head>
  <title>Cavapoos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!--Import Google Icon Font-->
  <link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
  <!--Let browser know website is optimized for mobile-->
 <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body>
  <% if admin_signed_in? %>
    <div class="navbar-fixed">
      <nav class="white bar">
        <div class="nav-wrapper">
          <img href="/" class="brand-logo center logo" src="<%= image_path("cavapoos-logo5.png") %>"></img>
          <ul id="nav-mobile" class="right">
            <li><a class="teal-text text-accent-2"><%= link_to 'Logout', destroy_admin_session_path , method: :delete %></a></li>
            <li><a href="#" class="teal-text text-accent-2">New Puppy</a></li>
          </ul>
        </div>
      </nav>
    </div>
  <% else %>
    <div class="navbar-fixed">
      <nav class="white bar">
        <div class="nav-wrapper">
          <img href="/" class="brand-logo center logo" src="<%= image_path("cavapoos-logo5.png") %>"></img>
          <ul id="nav-mobile" class="right">
            <li><a href="" class="black-text">Email</a></li>
            <li><a href="" class="black-text">Facebook</a></li>
          </ul>
        </div>
      </nav>
    </div>
  <% end %>

  <div class="hide">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>

<%= yield %>
</body>
</html>
